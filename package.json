{
	"name": "todo",
	"version": "1.0.0",
	"scripts": {
		"build": "run-s build:*",
		"build:rollup": "rollup -c --environment NODE_ENV:production",
		"build:inline-critical": "inline-critical -c ./dist/critical.css -h ./src/template.html --noscript head > ./dist/index.html",
		"build:cleanup": "rimraf ./dist/critical.css",
		"dev": "rollup -c -w",
		"start": "sirv dist"
	},
	"devDependencies": {
		"@rollup/plugin-commonjs": "^14.0.0",
		"@rollup/plugin-node-resolve": "^8.0.0",
		"autoprefixer": "^10.0.1",
		"inline-critical": "^6.0.1",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.1.6",
		"postcss-clean": "^1.1.0",
		"postcss-import": "^13.0.0",
		"postcss-load-config": "^3.0.0",
		"rimraf": "^3.0.2",
		"rollup": "^2.3.4",
		"rollup-plugin-copy": "^3.3.0",
		"rollup-plugin-livereload": "^2.0.0",
		"rollup-plugin-svelte": "^6.0.0",
		"rollup-plugin-terser": "^7.0.0",
		"svelte": "^3.0.0",
		"svelte-preprocess": "^4.5.2"
	},
	"dependencies": {
		"sirv-cli": "^1.0.0",
		"tailwindcss": "^1.9.6"
	}
}
